# Server
NODE_ENV=development
PORT=5000

# Database
DB_URI=mongodb://localhost:27017/dynamic-price-checker
DB_POOL_SIZE=10

# JWT
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug
LOG_DIR=logs

# AI reasoning (optional - falls back to heuristic summary)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
GEMINI_API_KEY=
AI_REASONING_TIMEOUT_MS=5000

# Alert tracker
ALERT_CHECK_INTERVAL_MS=1800000
ALERT_EQUALS_TOLERANCE=0.5
ALERT_RECIPIENT=

# AWS SES (optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
SES_FROM_EMAIL=
SES_CONFIGURATION_SET=
