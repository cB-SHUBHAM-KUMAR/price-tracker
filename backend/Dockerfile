# ─── Backend Dockerfile ──────────────────────────
FROM node:20-alpine AS base
WORKDIR /app
COPY package*.json ./
RUN npm ci --only=production

FROM base AS development
RUN npm ci
COPY . .
CMD ["npm", "run", "dev"]

FROM base AS production
COPY . .
EXPOSE 5000
USER node
CMD ["node", "src/server.js"]
